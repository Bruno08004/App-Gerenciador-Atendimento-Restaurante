    </padding>

    <Label text="Menu Principal">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <Button onAction="#handleGerenciarGarcons" prefHeight="40.0" prefWidth="200.0" text="Gerenciar Garçons" />
    <Button onAction="#handleIniciarAtendimento" prefHeight="40.0" prefWidth="200.0" text="Iniciar Atendimento" />
    <Button onAction="#handleVisualizarCardapio" prefHeight="40.0" prefWidth="200.0" text="Visualizar Cardápio" />
